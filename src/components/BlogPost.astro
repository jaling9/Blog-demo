---
const { title, url ,pubDate} = Astro.props

// 把pubDate转换成日期格式
const date = new Date(pubDate)

// 把日期格式转换成字符串
const dateStr = date.toLocaleDateString()

---
<li class="liStyle"><a href={url}>{title}</a>     <span>{dateStr}</span></li>

<style>
  .liStyle{
    margin: 12px 0px;
        list-style: none;
        list-style-position: inside;
        
        justify-content: space-between;
    }
    .liStyle span{
        color: rgb(136, 136, 136);
        font-size: small;
        text-align: end;
        /* display: block; */

       
    }

</style>
